{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "api",
      "host": {
        "sourcePath": "/var/app/current/api"
      }
    },
    {
      "name": "client",
      "host": {
        "sourcePath": "/var/app/current/client"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  "containerDefinitions": [

    {
      "name": "api",
      "image": "${ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com/${REPOSITORY}:${TAG}",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 9000,
          "containerPort": 9000
        }
      ],
      "links": [
        "db"
      ],
      "environment" : [
            { "name" : "MONGO_USERNAME", "value" : "$MONGO_USERNAME" },
            { "name" : "MONGO_PASSWORD", "value": "$MONGO_PASSWORD" },
            { "name" : "MONGO_PORT", "value": "$MONGO_PORT" },
            { "name" : "MONGO_DB", "value": "$MONGO_DB" },
            { "name" : "MONGO_HOSTNAME", "value": "$MONGO_HOSTNAME" }
        ],
      "mountPoints": [
        {
          "sourceVolume": "api",
          "containerPath": "/api"
        }
      ]
    },

    {
      "name": "client",
      "image": "${ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com/${REPOSITORY}:${TAG}",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ],
      "links": [
        "api"
      ],
      "mountPoints": [
        {
          "sourceVolume": "client",
          "containerPath": "/client"
        }
      ]
    },

    {
      "name": "db",
      "image": "mongo:4.1.8-xenial",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 27017,
          "containerPort": 27017
        }
      ],
      "environment" : [
            { "name" : "MONGO_INITDB_ROOT_USERNAME", "value" : "$MONGO_INITDB_ROOT_USERNAME" },
            { "name" : "MONGO_INITDB_ROOT_PASSWORD", "value": "$MONGO_INITDB_ROOT_PASSWORD" }
        ]
    },

    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "api",
        "client"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }

  ]
}
